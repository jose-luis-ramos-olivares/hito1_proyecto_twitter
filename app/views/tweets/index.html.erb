<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Profile Photo</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= image_tag(tweet.photo) %></td>
        <td><%= tweet.user %></td>
        <td><%= link_to 'Show', tweet %></td>
        <% if current_user&.id == tweet.user_id %>
          <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
          <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td>
          <span class="parent-likes">
            <span class="like_count" <%= tweet.id %> > 
              <%= tweet.get_likes.size %> &#128077
            </span>
            <a>
                <div>
                  <%= link_to like_tweet_path(tweet, 'unlike'), class: "unliked-btn",
                  method: :put, remote: :true do %> Unliked </div>
              <% end %>
              <% else %>
                <div>
                  <%= link_to like_tweet_path(tweet, 'like'), class: "like-btn",
                  method: :put, remote: :true do %> Like </div>
              <% end %>
            </a>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
