$('.unliked-btn').on('ajax:success', function(){
    $(this).parent().parent().find('.like_count')
    .html('<%= @tweet.get_likes.size %> &#128078');
    $(this).closest('.unliked-btn').html('Unliked');
});

$('.like-btn').on('ajax:success', function(){
    $(this).parent().parent().find('.like_count')
    .html('<%= @tweet.get_likes.size %> &#128077');
    $(this).closest('.like-btn').html('Like');
});
